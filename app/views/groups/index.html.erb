<!--分界线-->
<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
    <tr>
      <td>#</td>
      <td>Title</td>
      <td>Description</td>
    </tr>
    </thead>
    <tbody>

    <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td> <%= link_to(truncate(group.title, length: 15 ), group_path(group)) %> </td>
          <td><%= truncate(group.description, length: 15 ) %></td>
          <td>
            <% if group.editable_by?(current_user) %>
                <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default")%>
                <%= link_to("Delete", group_path(group),    class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
    <% end %>

    </tbody>
  </table>
  <!--bbs-->
  <section id="bbs">
  <div class="container-fulid">
    <div class="row">
      <% @groups.each do |group| %>
          <div class="col-md-4">
            <a href="<%= group_path(group) %>" target="_blank">
                <img src="images/b.png" class="img-responsive" alt=""/>
                <h3><%= link_to(group.title, group_path(group)) %></h3>
                <p><%= truncate(group.description, length: 15 ) %></p>
            </a>
          </div>
      <% end %>
    </div>
  </div>
  </section>
  <!--bbs-->
</div>